{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "checkJs": true,
    "esModuleInterop": true,
    "lib": [
      "ESNext",
      "dom",
    ],
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "node",
    "noEmit": true,
    "strict": true,
    "types": [
      "jest",
      "node",
    ],
  },
  "include": [
    "./size-check/",
    "./src/",
    "./test/",
  ],
  "exclude": [
    "**/dist",
    "./node_modules/",
    "./src/templates/client.*.js",
    "./src/templates/plugin.*.js",
  ]
}
